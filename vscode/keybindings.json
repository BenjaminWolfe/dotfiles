// Place your key bindings in this file to override the defaultsauto[]
// Currently trimmed down aggressively; add back later as needed
[
    {
        "key": "cmd+enter",
        "command": "sqltools.executeCurrentQuery",
        "when": "editorTextFocus && editorLangId == 'sql'"
    },
    {
      "key": "alt+-",
      "command": "type",
      "args": { "text": " <- " },
      "when": "editorTextFocus && (editorLangId == 'r' || editorLangId == 'rmd' || editorLangId == 'quarto')"
    },
    {
      "key": "ctrl+cmd+m",  // Use cmd+shift+m was already taken
      "command": "type",
      "args": { "text": " |>" },
      "when": "editorTextFocus && (editorLangId == 'r' || editorLangId == 'rmd' || editorLangId == 'quarto')"
    }
]